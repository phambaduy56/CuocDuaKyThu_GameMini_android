<?xml version="1.0" encoding="utf-8"?>
<!--3 check box-->
<!--3 cái seekbar-->
<!--layout_alignParentBottom nằm ở dưới-->
<!-- code chạy từ trên xuống dưới nên là phải để thằng cb3 trước không sẽ k thấy được -->

<RelativeLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/anhnen"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:layout_alignParentBottom="true"
        android:id="@+id/checkboxThree"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/checkboxTwo"
        android:layout_above="@id/checkboxThree"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <CheckBox
        android:id="@+id/checkboxOne"
        android:layout_above="@id/checkboxTwo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <SeekBar
        android:id="@+id/seekbarThree"
        android:progressDrawable="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/checkboxThree"
        android:thumb="@drawable/pokemon3"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <SeekBar
        android:id="@+id/seekbarTwo"
        android:progressDrawable="@android:color/transparent"
        android:layout_toRightOf="@id/checkboxTwo"
        android:layout_above="@id/seekbarThree"
        android:thumb="@drawable/pokemon2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <SeekBar
        android:id="@+id/seekbarOne"
        android:progressDrawable="@android:color/transparent"
        android:layout_toRightOf="@id/checkboxOne"
        android:layout_above="@id/seekbarTwo"
        android:thumb="@drawable/pokemon1"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:src="@drawable/animal"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/textviewDiemSo"
        android:text="100"
        android:textSize="50sp"
        android:textColor="#F44336"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_centerInParent="true"
        android:src="@drawable/nutplay2"
        android:background="@null"
        android:layout_width="200dp"
        android:layout_height="80dp"/>



</RelativeLayout>